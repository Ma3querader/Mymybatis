<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lakers.dao.AccountDao">

    <resultMap id="accountMap" type="com.lakers.domain.Account">
        <result column="username" property="name"></result>
        <result column="password" property="pw"></result>
        <result column="sex" property="sex"></result>
    </resultMap>

    <select id="findAll" resultMap="accountMap">
      select * from account
    </select>

    <select id="findByName" parameterType="java.lang.String" resultType="com.lakers.domain.Account">
        select * from account where username = #{name}
    </select>

    <insert id="saveAccount" parameterType="com.lakers.domain.Account">
        insert into account(username,password,sex)
        values(#{username},#{password},#{sex})
    </insert>

    <select id="findByCondition" parameterType="com.lakers.domain.Account" resultType="com.lakers.domain.Account">
        select * from account where username = #{username}
    </select>

</mapper>